<h1>Powerhouse#results</h1>
<p>Find me in app/views/powerhouse/results.html.erb</p>

<table>
	<thead>
		<td><strong>Action</strong></td>
		<td><strong>id</strong></td>
		<td><strong>User</strong></td>
		<td><strong>Tweet</strong></td>
	</thead>
	<tbody>
		<% @results.each do |tweet| %>
			<tr>
				<td>
					<a href= "<%= powerhouse_get_tweet_rating_by_api_path %>?id=<%= tweet.id %>&query=<%= @query %>">
					Get sentiment </a>
				</td>
				<td><%= tweet.id %></td>
				<td><%= tweet.user.name %></td>
				<td><%= tweet.text %></td>
			</tr>
		<% end %>
	</tbody>
</table>